---
import Default from "@layouts/default.astro";
import Nav from "@components/nav.astro";

const { title, number, chapterId, description, tags } = Astro.props;

const siteTitle =
    "EnFinWiki" + " - Lesson " + chapterId + "." + number + ": " + title;
---

<Default title={siteTitle} {description} {tags}>
    <div
        class="flex flex-col lg:flex-row gap-4 w-full lg:justify-between max-lg:items-center"
    >
        <Nav />
        <article
            class="bg-white border border-brand-grey/80 w-full max-w-full overflow-hidden flex flex-col gap-4 items-center rounded-2xl p-4 lg:p-4 xl:p-8 shadow-sm lg:shadow-md"
        >
            <h1
                class="text-3xl md:text-4xl lg:text-5xl font-sans font-bold text-center text-brand-blue/85"
            >
                Lesson {chapterId}.{number}: {title}
            </h1>
            <hr
                class="border-t border-brand-black/10 w-full my-0.5 lg:my-4 lg:border-brand-black/15 lg:border-dotted"
            />
            <slot />
        </article>
    </div>
</Default>
