---
const siteTitle = "FinWiki";
const author = "Данила Кононов, Елизавета Кареева, Даниил Асяев";
let keywords =
    "finance, financial, wiki, wikipedia, финансы, финансовая, вики, википедия, фин, study, project, учёба, учебный, проект";
const link = Astro.url;
const { title = "FinWiki", description, tags } = Astro.props;
keywords = keywords + tags;
---

<head>
    <!-- Charset -->
    <meta charset="utf-8" />

    <!-- Viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Compatibility -->
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- Page Title -->
    <title>{title}</title>

    <!-- Favicon -->
    <link
        rel="icon"
        type="image/png"
        href="/favicons/favicon-96x96.png"
        sizes="96x96"
    />
    <link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
    <link rel="shortcut icon" href="/favicons/favicon.ico" />

    <!-- Icon and Title for Apple Pinned App-Like Websites -->
    <link
        rel="apple-touch-icon"
        sizes="180x180"
        href="/favicons/apple-touch-icon.png"
    />
    <meta name="apple-mobile-web-app-title" content="FinWiki" />

    <!-- Icon for Android Pinned App-Like Websites -->
    <link rel="manifest" href="/favicons/site.webmanifest" />

    <!-- Sitemap for Crawlers -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Metadata for SEO -->
    <meta name="author" content={author} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <link rel="cannonical" href={link} />

    <!-- Metadata for Meta -->
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:url" content={link} />
    <meta property="og:title" content={title} />
    <meta property="og:image" content="/facebook.jpg" />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta property="og:image:description" content={description} />
    <meta property="og:type" content="website" />

    <!-- Metadata for X/Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:url" content={link} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:image" content="/facebook.jpg" />

    <!-- Metadata for Vivaldi -->
    <!-- Accent from Color -->
    <meta name="theme-color" content="#144ea9" />

    <!-- Give credits to Astro -->
    <meta name="generator" content={Astro.generator} />
</head>
